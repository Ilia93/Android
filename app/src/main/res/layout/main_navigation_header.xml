<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_header"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_header_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="start"
        android:paddingTop="@dimen/common_margin"
        android:layout_marginStart="@dimen/major_size"
        android:layout_marginTop="@dimen/major_size"
        android:src="@drawable/blank_profile_picture_80_80" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/header_margin_text_start_17dp"
        android:layout_marginTop="@dimen/common_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_header_label"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/common_margin"
            android:textColor="@color/white_1"
            android:textSize="@dimen/textSize_all_15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/add_header_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_margin"
            android:background="@drawable/ic_header_add_user"/>
    </LinearLayout>

</LinearLayout>