<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/completedWorksExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="200dp"
        android:layout_marginTop="@dimen/layoutTop_margin"
        android:layout_marginEnd="@dimen/common_margin"
        android:background="@drawable/white_buttons"
        android:text="@string/timer_exit_activity" />

    <androidx.cardview.widget.CardView
        android:id="@+id/commonWorkInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/common_margin"
        app:cardCornerRadius="@dimen/margin_all_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/firstInformationNote"
                style="@style/ArchiveTextRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"/>

            <TextView
                android:id="@+id/secondInformationNote"
                style="@style/ArchiveTextRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/thirdInformationNote"
                style="@style/ArchiveTextRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_margin"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>