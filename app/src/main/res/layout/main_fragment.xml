<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstract_mountains"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/create_work_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/main_editText_autofill"
                android:hint="@string/main_editText_autofill"
                android:inputType="text"
                android:layout_weight="1"
                android:textColor="@color/white_1"
                android:textColorHint="@color/white_1" />

            <ImageButton
                android:id="@+id/createWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_create_work_white_48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginBottom="@dimen/common_margin">

            <TextView
                android:id="@+id/predefinedWorks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_work_templates"
                android:textAlignment="center"
                android:textColor="@color/white_1"
                android:textSize="@dimen/major_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainWorksRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>