<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ArchiveTextRecyclerView">
        <item name="android:textSize">@dimen/textSize_all_11sp</item>
        <item name="android:layout_marginLeft">@dimen/common_margin</item>
        <item name="android:layout_marginRight">@dimen/common_margin</item>
        <item name="android:textColor">@color/blue_1</item>
    </style>

    <style name="CompletedWorksHeaders">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">@dimen/textSize_all_15sp</item>
    </style>

    <style name="CompletedWorks">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">@dimen/textSize_all_15sp</item>
        <item name="android:layout_marginStart">@dimen/margin_all_5dp</item>
    </style>

</resources>