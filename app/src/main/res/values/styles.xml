<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTextView" parent="Widget.AppCompat.TextView" />

    <style name="BaseTextView.Archive">
        <item name="android:textSize">@dimen/textSize_all_11sp</item>
        <item name="android:textColor">@color/blue_1</item>
    </style>

    <style name="BaseTextView.CompletedWorksHeaders">
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">@dimen/textSize_all_11sp</item>
    </style>

    <style name="BaseTextView.CompletedWorks">
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">@dimen/textSize_all_11sp</item>
    </style>

    <style name="BaseTextView.User">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">@dimen/textSize_all_15sp</item>
    </style>

    <style name="BaseTextView.UserData">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">@dimen/textSize_all_15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_user_screen_user_data_10dp</item>
    </style>

    <style name="BaseTextView.UserEdit">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">@dimen/textSize_all_15sp</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button" />

    <style name="BaseButton.UserDialog">
        <item name="android:textSize">@dimen/text_size_user_dialog_buttons_10sp</item>
        <item name="android:background">@drawable/bg_blue_btn</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText" />

    <style name="BaseEditText.User">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textColorHint">@color/white_1</item>
        <item name="android:textSize">@dimen/textSize_all_15sp</item>
    </style>

    <style name="BaseSpinner" parent="Widget.AppCompat.Spinner" />

    <style name="BaseSpinner.User">
        <item name="android:spinnerMode">dialog</item>
    </style>

</resources>